[alias]
    l = log --pretty=oneline -n 20 --graph
    s = status -s
    d = diff --patch-with-stat
    p = !"git pull; git submodule foreach git pull origin master"
    cl = clone --recursive
    co = checkout
    c = commit -a -v
    go = checkout -B
    tags = tag -l
    remotes = remote -v
    credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"
    undopush = push -f origin HEAD^:master
    pom = push origin master
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix
[merge]
   tool = vimdiff
[difftool "vimdiff"]
    cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
[mergetool "vimdiff"]
    cmd = vimdiff \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[user]
    name = Sebastian Zaha
    email = sebastian.zaha@gmail.com
[core]
    editor = nvim
    autocrlf = input
[color]
    diff = auto
    status = auto
    branch = auto
[branch "master"]
    remote = origin
    merge = refs/heads/master
[branch "main"]
    remote = origin
    merge = refs/heads/main
[push]
    default = simple
[init]
    defaultBranch = main
[sendemail]
    smtpserver = smtp.gmail.com
    smtpuser = sebastian.zaha@gmail.com
    smtpencryption = tls
    smtpserverport = 587
[diff]
	algorithm = patience
